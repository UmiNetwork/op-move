{
    "name": "@moved/hardhat-plugin",
    "version": "0.1.0",
    "description": "A plugin for Hardhat to support the development of Move smart contracts on the Moved Network.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "keywords": [
        "hardhat",
        "moved",
        "move",
        "smart-contract"
    ],
    "author": "Moved Team",
    "devDependencies": {
        "hardhat": "2.22.19",
        "mocha": "11.1.0"
    },
    "scripts": {
        "lint:fix": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}' && tslint --fix --config tslint.json --project tsconfig.json",
        "lint": "tslint --config tslint.json --project tsconfig.json",
        "test": "mocha --exit --recursive 'test/**/*.test.ts'",
        "build": "tsc",
        "watch": "tsc -w",
        "prepublishOnly": "npm run build"
    },
    "dependencies": {
        "@benfen/bcs": "0.1.0",
        "@types/mocha": "10.0.10",
        "neverthrow": "8.2.0",
        "toml": "3.0.0",
        "typescript": "5.8.2"
    },
    "peerDependencies": {
        "hardhat": "2.22.19"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MovedNetwork/op-move.git"
    },
    "bugs": {
        "url": "https://github.com/MovedNetwork/op-move/issues"
    },
    "homepage": "https://github.com/MovedNetwork/op-move#readme",
    "license": "ISC"
}
